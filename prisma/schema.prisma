generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Modelo Usu√°rio
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Modelo Grupo
model Group {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  members   String
  total     Float
  createdAt DateTime @default(now())
}

// Modelo Despesa
model Expense {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  description String
  amount      Float
  paidBy      String
  groupId     String
  createdAt   DateTime @default(now())
}

// Modelo Acordo
model Settlement {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  fromUser  String
  toUser    String
  amount    Float
  groupId   String
  createdAt DateTime @default(now())
}